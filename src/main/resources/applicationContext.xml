<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="memberDAO" class="com.libraryManage.memberDAO" />

	<bean id="RegSvc" class="com.libraryManage.RegisterService">
		<constructor-arg ref="memberDAO" />
	</bean>

	<bean id="LoginSvc" class="com.libraryManage.LoginService">
		<constructor-arg ref="memberDAO" />
	</bean>

	<bean id="bookDAO" class="com.libraryManage.BookDAO" />

	<bean id="AddBookSvc" class="com.libraryManage.AddBookService">
		<constructor-arg ref="bookDAO" />
	</bean>

	<bean id="memberPrinter" class="com.libraryManage.MemberPrinter" />

	<bean id="infoPrinter" class="com.libraryManage.MemberInfoPrinter">
		<property name="memberDAO" ref="memberDAO" />
		<property name="printer" ref="memberPrinter" />
	</bean>

</beans>